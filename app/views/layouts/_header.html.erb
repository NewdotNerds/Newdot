<nav data-behavior="animated-navbar" class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to root_path, class: "navbar-brand fix-width", id: "logo" do %>
        <%= image_tag('tong.png', height: 40, class: 'left-logo', alt: "Newdot") %>
      <% end %>
    </div>
    <ul class="nav navbar-nav filter-links">
      <li>
        <% if user_signed_in? %>
          <%= nav_link_to "Inicio", root_path %>
        <% else %>
          <%= nav_link_to "Staff pick", root_path %>
        <% end %>
      </li>
      <li><%= nav_link_to "Destacados", top_stories_path %></li>
      <% if user_signed_in? %>
        <li><%= nav_link_to "Leer después", dashboard_bookmarks_path %></li>
