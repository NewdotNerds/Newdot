<%= @user.username %>
<%= @user.description %>
<%= avatar_for @user, size: 120 %>

<%= pluralize(@user.followers.size, "follower") %>
<%= pluralize(@user.following.size, "following") %>
<% if user_signed_in? && current_user?(@user) %>
  <%= link_to "Edit", edit_user_path(@user) %>
<% end %>

<%= follow_button_for(@user) %>