<div class="row fix-scroll">
  <div class="col-md-6 col-md-offset-3 container">
    <div class="overlay-signin">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: 'off' }) do |f| %>
        <div class="form-input-wrapper-sessions white-black">
          <%= f.email_field :email, autofocus: true, placeholder: "Correo", autocomplete: 'off', onfocus: "this.value = this.value;" %>
        </div>

        <div class="form-input-wrapper-sessions white-black">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :Recuérdame %>
          </div>
        <% end -%>

        <%= f.submit "Inicia sesión", class: "button buttons-session" %>
        <p class="o">o</p>
        <%= link_to "Regístrate", new_user_registration_path, class: 'button a-to-button buttons-session pad-top' %>
      <% end %>
    </div>
  </div>
</div>