<div class="response">
  <div class="post-metadata">
  	<%= avatar_for response.user, size: 40 %>
    <div class="post-info">
      <%= link_to response.username, response.user %><br/>
      <small><%= time_ago_in_words(response.created_at) %> ago</small>
    </div>
  </div>

  <%= response.body %>

  <% if user_signed_in? && current_user.likes_response?(response) %>
    <%= render partial: 'responses/unlike_button', locals: { response: response } %>
  <% else %>
    <%= render partial: 'responses/like_button', locals: { response: response } %>
  <% end %>
  <%= response.likes.size %>
</div>