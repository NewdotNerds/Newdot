<div class="response">
  <div class="post-metadata">
  	<%= avatar_for response.user, size: 40 %>
    <div class="post-info">
      <%= link_to response.username, response.user %><br/>
      <small><%= time_ago_in_words(response.created_at) %> ago</small>
    </div>
  </div>

  <%= response.body %>

  <% if user_signed_in? && current_user.likes_response?(response) %>
    <%= button_to "Unlike", response_like_path(response, current_user.likes.find_by(likeable: response)), method: :delete %>
  <% else %>
    <%= button_to "Like", response_likes_path(response) %>
  <% end %>
</div>